#include <stdlib.h>
#include "towers.h"

int main(int argc, char **argv)
{
	int n = 3;
	int from = 1, dest = 2;
	if(argc > 1){
		switch(argv[1]){
			case "--help":
			case "-h":
				printf("");
				exit(0);
				break;
			case "--custom":
				n = atoi(argv[2]);
				printf("Beginning the sequence with n = %d many disks",n);
				break;
			case "-c":
				n = atoi(args[3]);
				printf("Beginning	 the sequence with n = %d many disks",n);
				break;
			case "--default":
			case "-d":
				printf("Beginning the sequence with n = %d many disks:\n",n);
				break;
			default:
				printf("please enter a command as follows: \n		towersMain <command> <parameters>\n");
				exit(0);
				break;
		}
	}

    	towers(n, from, dest);
    	exit(0);
}

